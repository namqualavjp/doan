@model doan.Models.SanPham
@using doan.Models
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "NewProduct", FormMethod.Post,new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Thêm Sản Phẩm Mới</strong>
                            </div>
                            <div class="card-body card-block">
                                @Html.ValidationSummary(true)
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.taiKhoan, "Tài khoản", htmlAttributes :new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.taiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                                        <small class="form-text text-muted">Phải nhập <b style="color: red">Tài khoản</b> để duyệt</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.maSP, "Mã sản phẩm", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.maSP, new { htmlAttributes = new { @class = "form-control", @placehoder = "Mời nhập nội dung.." } })
                                        <small class="form-text text-muted">Mã phải viết <b style="color: red">IN HOA</b></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.maLoai, "Mã loại", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.maLoai, new { htmlAttributes = new { @class = "form-control" } })
                                        <small class="form-text text-muted">Phải nhập <b style="color: red">Mã loại</b> để duyệt</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.tenSP, "Tên sản phẩm", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
                                        <small class="form-text text-muted">Nhập tối thiểu 20 ký tự</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.giaBan, "Giá bán", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.giaBan, new { htmlAttributes = new { @class = "form-control" } })
                                        <small class="form-text text-muted">Chỉ nhập số</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.noiDung, "Nội dung sản phẩm", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea name="noiDung">Nhập nội dung sản phẩm</textarea>

                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.hinhDD, "Chọn hình", new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" name="file" class="form-control-file">
                                        <span style="color:red">@ViewBag.Thongbao</span>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.ngayDang, "Ngày cập nhật", new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="date" name="ngayDang" />
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        @Html.LabelFor(Model => Model.soluong, "Số lượng", htmlAttributes: new { @class = " form-control-label" })
                                    </div>
                                    <div class="col-12 col-md-9">
                                        @Html.EditorFor(Model => Model.soluong, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <input type="submit" value="Thêm" class="btn btn-primary btn-sm">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                            <p style="font-size:large; color:red">Design by Joker_Team</p>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
}
    <!--END MAIN CONTENT-->